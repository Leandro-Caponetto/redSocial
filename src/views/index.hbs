<div class="card">

  <div class="card-header bg-dark">
    <h3 class="card-title text-white">
      <i class="far fa-image"></i>
      Upload and image
    </h3>
  </div>
  <div class="card-body">
    <form action="/images" method="POST" enctype="multipart/form-data">
      <div class="form-group">
        <div class="input-group">
          <div class="custom-file">
            <input
              type="file"
              name="image"
              class="custom-file-input"
              id="inputGroup"
              aria-describedby="inputGroupFileAddon"
              required
            />
            <label class="custom-file-label" for="inputGroupFile">Choose file</label>
          </div>
        </div>
      </div>
      <div class="form-group">
        <input
          type="text"
          name="title"
          class="form-control"
          placeholder="Title for the image"
          required
        />
      </div>
      <div class="form-group">
        <textarea
          name="description"
          rows="2"
          class="form-control"
          placeholder="Description for the Image"
          required
        ></textarea>
      </div>
      <div class="form-group">
        <button class="btn btn-success">
          <i class="fa fa-upload"></i>
          Upload Image
        </button>
      </div>

    </form>
  </div>

</div>

<div class="card mt-2">
  <div class="card-header bg-dark text-white">
    <h3><i class="far fa-images"></i> Recent Uploads</h3>
  </div>
  <div class="card-body p-5">
    <div class="row">
      <div class="card-body p-5">
    <div class="row">
      {{#each images}}
        <div class="col-md-4 text-center">
          <a href="/images/{{filename}}">
            <img
              src="/public/uploads/{{filename}}"
              alt="{{title}}"
              class="w-100 h-100 img-thumbnail"
              style="object-fit: cover;"
            />
          </a>
          
        </div>
      {{else}}
        <div class="text-light text-center ">
          <h1 class="text-light">There are no Images <strong>yet</strong></h1>
          <p>Upload your first image</p>
          <span class="material-icons" style="font-size: 7rem;">
            add_a_photo
          </span>
        </div>
      {{/each}}
      
    </div>
  </div>

</div>
      
